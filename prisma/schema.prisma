generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para las consultas de contacto
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  message   String   @db.Text
  visaType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

// Modelo para los tipos de visa
model VisaType {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  icon        String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("visa_types")
}

// Modelo para los abogados
model Lawyer {
  id          String   @id @default(cuid())
  name        String
  title       String
  description String   @db.Text
  imageUrl    String?
  email       String?
  phone       String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("lawyers")
}

// Modelo para testimonios (opcional)
model Testimonial {
  id        String   @id @default(cuid())
  name      String
  content   String   @db.Text
  rating    Int      @default(5)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}
